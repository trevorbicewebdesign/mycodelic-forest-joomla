                    <option value="collection">COM_JFBCONNECT_WIDGET_TWITTER_TIMELINE_TYPES_OPTION_COLLECTION</option>
                    <option value="search">COM_JFBCONNECT_WIDGET_TWITTER_TIMELINE_TYPES_OPTION_SEACRH</option>
                </field>
                <field name="username" type="text" label="COM_JFBCONNECT_WIDGET_TWITTER_TIMELINE_USERNAME_LABEL" description="COM_JFBCONNECT_WIDGET_TWITTER_TIMELINE_USERNAME_DESC" default="sourcecoast"/>
                <field name="widget_id" type="text" label="COM_JFBCONNECT_WIDGET_TWITTER_TIMELINE_WIDGET_ID_LABEL" description="COM_JFBCONNECT_WIDGET_TWITTER_TIMELINE_WIDGET_ID_DESC"/>

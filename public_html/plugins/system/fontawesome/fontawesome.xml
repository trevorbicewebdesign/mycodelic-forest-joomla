	</languages>	
	<media folder="media" destination="tbworks">
		<folder>css</folder>
		<folder>images</folder>
	</media>
	<files>
		<filename plugin="fontawesome">fontawesome.php</filename>
		<filename>index.html</filename>
		<folder>assets</folder>
	</files>
	<config>
        <fields name="params">
            <fieldset name="basic">
				<field name="rumid" type="text" label="PT_RUMID_LABEL" description="PT_RUMID_DESC" />
			</fieldset>
		</fields>

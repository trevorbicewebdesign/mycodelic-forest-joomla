<?xml version="1.0" encoding="utf-8"?>
<form>
	<fields name="profile">
		<fieldset
			name="profile"
			label="PLG_MYCODELIC_USER_PROFILE_SLIDER_LABEL"
		>
			<field
				name="address1"
				type="text"
				label="PLG_MYCODELIC_USER_PROFILE_FIELD_ADDRESS1_LABEL"
				description="PLG_MYCODELIC_USER_PROFILE_FIELD_ADDRESS1_DESC"
				id="address1"
				filter="string"
				size="30"
			/>

			<field
				name="address2"
				type="text"
				label="PLG_MYCODELIC_USER_PROFILE_FIELD_ADDRESS2_LABEL"
				description="PLG_MYCODELIC_USER_PROFILE_FIELD_ADDRESS2_DESC"
				id="address2"
				filter="string"
				size="30"
			/>

			<field
				name="city"
				type="text"
				label="PLG_MYCODELIC_USER_PROFILE_FIELD_CITY_LABEL"
				description="PLG_MYCODELIC_USER_PROFILE_FIELD_CITY_DESC"
				id="city"
				filter="string"
				size="30"
			/>

			

			<field
				name="country"
				type="country"
				label="PLG_MYCODELIC_USER_PROFILE_FIELD_COUNTRY_LABEL"
				description="PLG_MYCODELIC_USER_PROFILE_FIELD_COUNTRY_DESC"
				id="country"
                default="1228"
				filter="string"
				size="1"
			>
            </field>
            
            <field
				name="state"
				type="state"
				label="PLG_MYCODELIC_USER_PROFILE_FIELD_STATE_LABEL"
				description="PLG_MYCODELIC_USER_PROFILE_FIELD_STATE_DESC"
				id="state"
				filter="string"
				size="1"
			>
            </field>
            

			<field
				name="postal_code"
				type="text"
				label="PLG_MYCODELIC_USER_PROFILE_FIELD_POSTAL_CODE_LABEL"
				description="PLG_MYCODELIC_USER_PROFILE_FIELD_POSTAL_CODE_DESC"
				id="postal_code"
				filter="string"
				size="30"
			/>

			<field
				name="phone"
				type="tel"
				label="PLG_MYCODELIC_USER_PROFILE_FIELD_PHONE_LABEL"
				description="PLG_MYCODELIC_USER_PROFILE_FIELD_PHONE_DESC"
				id="phone"
				filter="string"
				size="30"
			/>


			<field
				name="aboutme"
				type="textarea"
				label="PLG_MYCODELIC_USER_PROFILE_FIELD_ABOUT_ME_LABEL"
				description="PLG_MYCODELIC_USER_PROFILE_FIELD_ABOUT_ME_DESC"
				cols="30"
				rows="5"
				filter="safehtml"
			/>

            <field
				name="burningman_years"
				type="checkbox"
				label="PLG_MYCODELIC_USER_PROFILE_FIELD_YEARS_LABEL"
				description="PLG_MYCODELIC_USER_PROFILE_FIELD_YEARS_DESC"
				info="PLG_MYCODELIC_USER_PROFILE_SPACER_YEARS"
				filter="string"
			>
                <option value="1">Test</option>
            </field>

			<field
				name="tos"
				type="tos"
				label="PLG_MYCODELIC_USER_PROFILE_FIELD_TOS_LABEL"
				description="PLG_MYCODELIC_USER_PROFILE_FIELD_TOS_DESC"
				default="0"
				filter="integer"
				>
				<option value="1">PLG_MYCODELIC_USER_PROFILE_OPTION_AGREE</option>
				<option value="0">JNO</option>
			</field>
		</fieldset>
	</fields>
</form>

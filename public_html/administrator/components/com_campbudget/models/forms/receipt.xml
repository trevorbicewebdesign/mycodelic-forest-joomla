<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="details"
		addfieldpath="/administrator/components/com_campbudget/models/fields">
        <field 
			name = "id" 
			type = "text" 
			default = "0"
			readonly = "true" 
			class = "readonly"
			label = "JGLOBAL_FIELD_ID_LABEL" 
			description	= "JGLOBAL_FIELD_ID_DESC" 
			/>
		<field 
			name = "season" 
			type = "text" 
			label = "Season" 
			description	= "JGLOBAL_FIELD_ID_DESC" 
		/>
        <field 
			name = "donation" 
			type = "radio" 
			label = "Donation" 
			default="0"
			description	= "JGLOBAL_FIELD_ID_DESC" 
			class="btn-group btn-group-yesno"
			>
			<option value="1">JYES</option>
 			<option value="0">JNO</option>
		</field>
		<field 
			name = "reimbursed" 
			type = "radio" 
			label = "Reimbersed" 
			default="0"
			description	= "JGLOBAL_FIELD_ID_DESC" 
			class="btn-group btn-group-yesno"
			>
			<option value="1">JYES</option>
 			<option value="0">JNO</option>
		</field>
		<field 
			name = "total" 
			type = "text" 
			label = "Total" 
			default = "0.00"
			description	= "JGLOBAL_FIELD_ID_DESC" 
		/>
		<field 
			name = "user_id" 
			type = "user" 
			label = "User" 
			description	= "JGLOBAL_FIELD_ID_DESC" 
		/>
		<field 
			name = "pdf_path" 
			type = "text" 
			label = "PDF Path" 
			description	= "JGLOBAL_FIELD_ID_DESC" 
		/>
    </fieldset>
</form>
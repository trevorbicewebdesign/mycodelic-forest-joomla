<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset name="defaults">
        <field name="social_graph_fields"
               type="textarea"
               rows="10"
               cols="50"
               label="COM_JFBCONNECT_OPENGRAPH_SETTINGS_DEFAULTS_LABEL"
               description="COM_JFBCONNECT_OPENGRAPH_SETTINGS_DEFAULTS_DESC"
               default=""
                />
        <field name="social_graph_fields_desc"
               type="note"
               description="COM_JFBCONNECT_OPENGRAPH_SETTINGS_DEFAULTS_DESC2"
                />
    </fieldset>
    <fieldset name="advanced">
        <field name="social_graph_turn_off_all"
               type="radio"
               label="COM_JFBCONNECT_OPENGRAPH_SETTINGS_TURN_OFF_ALL_LABEL"
               description="COM_JFBCONNECT_OPENGRAPH_SETTINGS_TURN_OFF_ALL_DESC"
               default="0"
               labelclass="config_setting"
               class="btn-group"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field name="social_graph_multiple_images"
               type="radio"
               label="COM_JFBCONNECT_OPENGRAPH_SETTINGS_MULTIPLE_IMAGES_LABEL"
               description="COM_JFBCONNECT_OPENGRAPH_SETTINGS_MULTIPLE_IMAGES_DESC"
               default="1"
               labelclass="config_setting"
               class="btn-group"
                >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field name="social_graph_image_size"
               type="radio"
               label="COM_JFBCONNECT_OPENGRAPH_SETTINGS_IMAGE_SIZE_LABEL"
               description="COM_JFBCONNECT_OPENGRAPH_SETTINGS_IMAGE_SIZE_DESC"
               default="0"
               labelclass="config_setting"
               class="btn-group"
                >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
    </fieldset>
    <fieldset name="debug">
        <field name="fb_debugtool_desc"
               type="note"
               description="COM_JFBCONNECT_OPENGRAPH_SETTINGS_DEBUGTOOL_DESC"
                />
        <field name="tw_debugtool_desc"
               type="note"
               description="COM_JFBCONNECT_OPENGRAPH_SETTINGS_TWITTER_CARDS_DEBUGTOOL_DESC"
                />
    </fieldset>
    <fieldset name="skip">
        <field name="social_graph_skip_fields"
               type="textarea"
               rows="10"
               cols="50"
               label="COM_JFBCONNECT_OPENGRAPH_SETTINGS_SKIP_LABEL"
               description="COM_JFBCONNECT_OPENGRAPH_SETTINGS_SKIP_DESC"
               default=""
                />
        <field name="social_graph_skip_fields_desc"
               type="note"
               description="COM_JFBCONNECT_OPENGRAPH_SETTINGS_SKIP_DESC2"
                />
        <field name="social_graph_skip_components"
               type="enabledcomponents"
               label="COM_JFBCONNECT_OPENGRAPH_SETTINGS_SKIP_COMPONENTS_LABEL"
               description="COM_JFBCONNECT_OPENGRAPH_SETTINGS_SKIP_COMPONENTS_DESC"
               default="--"
               labelclass="config_setting note"
               multiple="true"
                />
    </fieldset>
    <fieldset name="twitter_cards">
        <field name="social_graph_twitter_cards_enabled"
               type="radio"
               label="COM_JFBCONNECT_OPENGRAPH_SETTINGS_TWITTER_CARDS_ENABLED_LABEL"
               description="COM_JFBCONNECT_OPENGRAPH_SETTINGS_TWITTER_CARDS_ENABLED_DESC"
               default="0"
               labelclass="config_setting"
               class="btn-group"
                >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field name="social_graph_twitter_cards_types"
               type="list"
               label="COM_JFBCONNECT_OPENGRAPH_SETTINGS_TWITTER_CARDS_TYPES_LABEL"
               description="COM_JFBCONNECT_OPENGRAPH_SETTINGS_TWITTER_CARDS_TYPES_DESC"
               default="summary"
               labelclass="config_setting"
                >
            <option value="summary">COM_JFBCONNECT_OPENGRAPH_SETTINGS_TWITTER_CARDS_TYPES_SUMMARY_CARD_LABEL</option>
            <option value="summary_large_image">COM_JFBCONNECT_OPENGRAPH_SETTINGS_TWITTER_CARDS_TYPES_SUMMARY_CARD_WITH_LARGE_IMAGE_LABEL</option>
            <option value="app">COM_JFBCONNECT_OPENGRAPH_SETTINGS_TWITTER_CARDS_TYPES_APP_CARD_LABEL</option>
            <option value="player">COM_JFBCONNECT_OPENGRAPH_SETTINGS_TWITTER_CARDS_TYPES_PLAYER_CARD_LABEL</option>
        </field>
        <field name="social_graph_twitter_cards_twitter_site"
               type="text"
               label="COM_JFBCONNECT_OPENGRAPH_SETTINGS_TWITTER_CARDS_TWITTER_SITE_LABEL"
               description="COM_JFBCONNECT_OPENGRAPH_SETTINGS_TWITTER_CARDS_TWITTER_SITE_DESC"
               default=""
               length="40"
               labelclass="config_setting"
                />
        <field name="social_graph_twitter_cards_twitter_creator"
               type="text"
               label="COM_JFBCONNECT_OPENGRAPH_SETTINGS_TWITTER_CARDS_TWITTER_CREATOR_LABEL"
               description="COM_JFBCONNECT_OPENGRAPH_SETTINGS_TWITTER_CARDS_TWITTER_CREATOR_DESC"
               default=""
               length="40"
               labelclass="config_setting"
                />

    </fieldset>
</form>

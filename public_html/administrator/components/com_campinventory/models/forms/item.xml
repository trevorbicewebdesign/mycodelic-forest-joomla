<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="details"
		addfieldpath="/administrator/components/com_campinventory/models/fields">
		<field 
			name 		= "id" 
			type			= "text" 
			default		= "0"
			readonly		= "true" 
			class		= "readonly"
			label		= "JGLOBAL_FIELD_ID_LABEL" 
			description	= "JGLOBAL_FIELD_ID_DESC" 
			/>
		<field 
			name			= "short_desc" 
			type			= "text" 
			default		= ""
			readonly		= "" 
			class		= "input-xxlarge input-large-text"
			label		= "Short Description" 
			description	= "CI_FIELD_SHORT_DESC_DESC" 
			/>	
		<field 
			name			= "category" 
			type			= "category"
			extension		= "com_campinventory"
			default		= ""
			readonly		= "" 
			class		= "input-xxlarge input-large-text"
			label		= "Category" 
			description	= "CI_FIELD_SHORT_DESC_DESC" 
			/>	
		<field
			name			="type"
			type			="list"
			class		="btn-group "
			default		="1"
			label		="Type"
			description	="JGLOBAL_SHOW_TITLE_DESC">
				<option>--Please Select a tye--</option>
				<option value="group">group</option>
				<option value="container">container</option>
				<option value="item">item</option>
		</field>
		<field
			name			="condition"
			type			="list"
			class		="btn-group "
			default		="1"
			label		="Condition"
			description	="JGLOBAL_SHOW_TITLE_DESC">
				<option>--Please Select a Condition--</option>
				<option value="5">New / Mint</option>
				<option value="4">Excellent</option>
				<option value="3">Good</option>
				<option value="2">Fair</option>
				<option value="1">Poor</option>
				<option value="0">Broken</option>
		</field>
		<field 
			name			= "quantity" 
			type			= "text" 
			default		= ""
			readonly		= "" 
			class		= "input-xxlarge input-large-text"
			label		= "Quantity" 
			description	= "CI_FIELD_OWNEDBY_DESC" 
			/>	
		<field name		= "owned_by" 
			type			= "user"
			label		= "Owned By"
			class		= "readonly"
			readonly		= "true"
			filter		= "unset" />
		<field 
			name			= "length" 
			type			= "text" 
			default		= ""
			readonly		= "" 
			class		= "input-xxlarge input-large-text"
			label		= "Length" 
			description	= "CI_FIELD_LENGTH_DESC" 
			/>	
		<field 
			name			= "width" 
			type			= "text" 
			default		= ""
			readonly		= "" 
			class		= "input-xxlarge input-large-text"
			label		= "Width" 
			description	= "CI_FIELD_WIDTH_DESC" 
			/>	
		<field 
			name			= "height" 
			type			= "text" 
			default		= ""
			readonly		= "" 
			class		= "input-xxlarge input-large-text"
			label		= "Height" 
			description	= "CI_FIELD_HEIGHT_DESC" 
			/>	
		<field 
			name			= "weight" 
			type			= "text" 
			default		= ""
			readonly		= "" 
			class		= "input-xxlarge input-large-text"
			label		= "Weight" 
			description	= "CI_FIELD_WEIGHT_DESC" 
			/>	
	</fieldset>
</form>

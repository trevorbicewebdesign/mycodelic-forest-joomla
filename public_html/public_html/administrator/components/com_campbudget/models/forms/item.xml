<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="details"
		addfieldpath="/administrator/components/com_campbudget/models/fields">
		<field 
			name 		= "id" 
			type			= "text" 
			default		= "0"
			readonly		= "true" 
			class		= "readonly"
			label		= "JGLOBAL_FIELD_ID_LABEL" 
			description	= "JGLOBAL_FIELD_ID_DESC" 
			/>
		<field 
			name			= "category" 
			type			= "category"
			extension		= "com_campbudget"
			default		= ""
			readonly		= "" 
			class		= "input-xxlarge input-large-text"
			label		= "Category" 
			description	= "CI_FIELD_SHORT_DESC_DESC" 
			/>	
		<field 
			name			= "budgetid" 
			type			= "text"
			
			default		= ""
			readonly		= "" 
			class		= "input-xxlarge input-large-text"
			label		= "Budget Id" 
			description	= "CI_FIELD_SHORT_DESC_DESC" 
			/>	
		
		<field 
			name			= "name" 
			type			= "text" 
			default		= ""
			readonly		= "" 
			class		= "input-xxlarge input-large-text"
			label		= "Item Name" 
			description	= "CI_FIELD_CONDITION_DESC" 
			/>	
		<field
		
			name			="type"
			type			="radio"
			class		="btn-group btn-group-yesno"
			default		="1"
			label		="Item Type"
			description	="JGLOBAL_SHOW_TITLE_DESC">
				<option value="1">Box</option>
				<option value="2">Item</option>
				<option value="3">Service</option>
		</field>
		<field
		
			name			="core"
			type			="radio"
			class		="btn-group btn-group-yesno"
			default		="1"
			label		="Core Element"
			description	="JGLOBAL_SHOW_TITLE_DESC">
				<option value="1">Yes</option>
				<option value="2">No</option>

		</field>
		<field 
			name			= "estimated_cost" 
			type			= "text" 
			default		= ""
			readonly		= "" 
			class		= "input-xxlarge input-large-text"
			label		= "Estimated Cost" 
			description	= "CI_FIELD_OWNEDBY_DESC" 
			
			/>	
		<field 
			name			= "actual_cost" 
			type			= "text" 
			default		= ""
			readonly		= "" 
			class		= "input-xxlarge input-large-text"
			label		= "Actual Cost" 
			description	= "CI_FIELD_OWNEDBY_DESC" 
			/>	
		
		<field 
			name			= "link" 
			type			= "text" 
			default		= ""
			readonly		= "" 
			class		= "input-xxlarge input-large-text"
			label		= "Link" 
			description	= "CI_FIELD_WIDTH_DESC" 
			/>	
		<field 
			name			= "quantity" 
			type			= "text" 
			default		= ""
			readonly		= "" 
			class		= "input-xxlarge input-large-text"
			label		= "Quantity" 
			description	= "CI_FIELD_WIDTH_DESC" 
			/>	
		<field 
			name			= "count" 
			type			= "text" 
			default		= ""
			readonly		= "" 
			
			label		= "Count" 
			description	= "CI_FIELD_WIDTH_DESC" 
			showon 		= "type:1"
			/>	

	</fieldset>
</form>

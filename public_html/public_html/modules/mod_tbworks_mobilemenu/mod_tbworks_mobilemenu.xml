<?xml version="1.0" encoding="utf-8"?>
<extension	type="module"	version="1.6.0"	client="site"	method="upgrade">
	<name>TBWorks - Mobile Menu</name>
	<author>Trevor Bice Webdesign</author>
	<creationDate>March 2014</creationDate>
	<copyright>Copyright (C) 2002 - 2014 Trevor Bice</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>trevorbicewebdesign@gmail.com</authorEmail>
	<authorUrl>webdesign.trevorbice.com</authorUrl>
	<version>1.0.0 build 101</version>
	<description>
	<![CDATA[
		
		<link rel="stylesheet" href="../modules/mod_tbworks_mobilemenu/assets/admin.css" type="text/css" />
		<script src="../modules/mod_tbworks_mobilemenu/assets/admin.js" type="text/javascript"></script>
		
		<div id="extension-description">
		<h1>Mobile Menu</h1>
		<p>Outputs a Joomla menu as a drop down select box. Useful for mobile devices.</p>
		
		<hr/>
		<table width="100%" cellpadding="0" cellspacing="0">
			<tr>
				<td valign="top">
				Brought to you by:<br/>
				<a href="http://webdesign.trevorbice.com/" target="_blank">
					<img src="../media/tbworks/images/tbwebdesignlogo.png"/>
				</a>
				</td>
				<td>
				</td>
			</tr>
		</table>

		</div>
		
		]]>
	
	</description>
	<files>
		<filename module="mod_tbworks_mobilemenu">mod_tbworks_mobilemenu.php</filename>
		<filename>mod_tbworks_mobilemenu.xml</filename>
		<filename>helper.php</filename>
		<filename>changelog.php</filename>
		<filename>index.html</filename>
		<folder>fields</folder>
		<folder>tmpl</folder>
		<folder>lists</folder>
		<folder>themes</folder>
		<folder>assets</folder>	
	</files>
	<config>
		<fields name="params">
			<fieldset addfieldpath="modules/mod_tbworks_mobilemenu/fields" name="basic">
				<field
					name="menutype"
					type="menu"
					label="MOD_MENU_FIELD_MENUTYPE_LABEL"
					description="MOD_MENU_FIELD_MENUTYPE_DESC" />
				<field
					name="moduleclass_sfx"
					type="text"
					label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
					description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
	</fieldset>
	<fieldset name="advanced">
			<field
				name="cache"
				type="list"
				label="Caching"
				description="Select whether to cache the content of this module">
			<option value="1">Use global</option>
			<option value="0">No caching</option>
			</field>
				<field
				name="cache_time"
				type="text"
				label="Cache Time"
				description="The time before the module is recached" />
	</fieldset>
		</fields>
	</config>
</extension>

  <config>
    <fields name="params" addfieldpath="administrator/components/com_joomgallery/models/fields" addrulepath="administrator/components/com_joomgallery/models/rules">
      <fieldset name="MOD_JGTREEVIEW_COMMON_PARAMETER_LBL" label="MOD_JGTREEVIEW_COMMON_PARAMETER_LBL">
          <field name="moduleclass_sfx" type="text" default="" label="MOD_JGTREEVIEW_MODULE_CLASS_SUFFIX_LBL" description="MOD_JGTREEVIEW_MODULE_CLASS_SUFFIX_DESC" />
          <field name="layout" type="modulelayout" default="default" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
          <field name="cfg_itemid" type="text" default="" label="MOD_JGTREEVIEW_ITEMID_LBL" description="MOD_JGTREEVIEW_ITEMID_DESC"/>  
          <field class="btn-group" name="cfg_usrmode" type="radio" default="0" label="MOD_JGTREEVIEW_USRMODE_LBL" description="MOD_JGTREEVIEW_USRMODE_DESC">
            <option value="0">MOD_JGTREEVIEW_NO_LBL</option>
            <option value="1">MOD_JGTREEVIEW_YES_LBL</option>
          </field>            
          <field name="cfg_root_catid" type="text" class="validate-numeric" default="1" label="MOD_JGTREEVIEW_ROOT_CATID_LBL" description="MOD_JGTREEVIEW_ROOT_CATID_DESC" required="true" />
          <field name="cfg_name" type="text" default="" label="MOD_JGTREEVIEW_NAME_LBL" description="MOD_JGTREEVIEW_NAME_DESC" />
          <field name="cfg_sort_cat" type="list" default="0" label="MOD_JGTREEVIEW_SORT_CAT_LBL" description="MOD_JGTREEVIEW_SORT_CAT_DESC">
            <option value="name ASC">MOD_JGTREEVIEW_SORT_NAME_ASC_LBL</option>
            <option value="name DESC">MOD_JGTREEVIEW_SORT_NAME_DESC_LBL</option>
            <option value="cid ASC">MOD_JGTREEVIEW_SORT_DATE_ASC_LBL</option>
            <option value="cid DESC">MOD_JGTREEVIEW_SORT_DATE_DESC_LBL</option>
            <option value="lft ASC">MOD_JGTREEVIEW_SORT_ORDERING_ASC_LBL</option>
            <option value="lft DESC">MOD_JGTREEVIEW_SORT_ORDERING_DESC_LBL</option>
          </field>
          <field name="cfg_sort_subcat" type="list" default="0" label="MOD_JGTREEVIEW_SORT_SUBCAT_LBL" description="MOD_JGTREEVIEW_SORT_SUBCAT_DESC">
            <option value="name ASC">MOD_JGTREEVIEW_SORT_NAME_ASC_LBL</option>
            <option value="name DESC">MOD_JGTREEVIEW_SORT_NAME_DESC_LBL</option>
            <option value="cid ASC">MOD_JGTREEVIEW_SORT_DATE_ASC_LBL</option>
            <option value="cid DESC">MOD_JGTREEVIEW_SORT_DATE_DESC_LBL</option>
            <option value="lft ASC">MOD_JGTREEVIEW_SORT_ORDERING_ASC_LBL</option>
            <option value="lft DESC">MOD_JGTREEVIEW_SORT_ORDERING_DESC_LBL</option>
          </field>
          <field name="cfg_blacklist_cats" type="text" default="" label="MOD_JGTREEVIEW_BLACKLIST_CATS_LBL" description="MOD_JGTREEVIEW_BLACKLIST_CATS_DESC" />

          <field name="cfg_nodelink" type="list" default="0" label="MOD_JGTREEVIEW_NODELINK_LBL" description="MOD_JGTREEVIEW_NODELINK_DESC">
            <option value="0">MOD_JGTREEVIEW_NODELINK_CATEGORY_VIEW</option>
            <option value="1">MOD_JGTREEVIEW_NODELINK_DEFAULT_DETAIL_VIEW</option>
          </field>                          
          <field class="btn-group" name="cfg_showhidden" type="radio" default="0" label="MOD_JGTREEVIEW_SHOWHIDDEN_LBL" description="MOD_JGTREEVIEW_SHOWHIDDEN_DESC">
            <option value="0">MOD_JGTREEVIEW_NO_LBL</option>
            <option value="1">MOD_JGTREEVIEW_YES_LBL</option>
          </field>            
          <field name="cfg_max_len_catname" class="validate-numeric" type="text" default="0" label="MOD_JGTREEVIEW_MAX_LEN_CATNAME_LBL" description="MOD_JGTREEVIEW_MAX_LEN_CATNAME_DESC" />
          <field class="btn-group" name="cfg_show_open_close_all" type="radio" default="1" label="MOD_JGTREEVIEW_SHOW_OPEN_CLOSE_ALL_LBL" description="MOD_JGTREEVIEW_SHOW_OPEN_CLOSE_ALL_DESC">
            <option value="0">MOD_JGTREEVIEW_NO_LBL</option>
            <option value="1">MOD_JGTREEVIEW_YES_LBL</option>
          </field>
          <field class="btn-group" name="cfg_show_always_expanded" type="radio" default="0" label="MOD_JGTREEVIEW_SHOW_ALWAYS_EXPANDED_LBL" description="MOD_JGTREEVIEW_SHOW_ALWAYS_EXPANDED_DESC">
            <option value="0">MOD_JGTREEVIEW_NO_LBL</option>
            <option value="1">MOD_JGTREEVIEW_YES_LBL</option>
          </field>    
          <field class="btn-group" name="cfg_show_credits" type="radio" default="1" label="MOD_JGTREEVIEW_SHOW_CREDITS_LBL" description="MOD_JGTREEVIEW_SHOW_CREDITS_DESC">
            <option value="0">MOD_JGTREEVIEW_NO_LBL</option>
            <option value="1">MOD_JGTREEVIEW_YES_LBL</option>
          </field>
        </fieldset>
        <fieldset name="MOD_JGTREEVIEW_VIEW_PARAMETER_LBL" label="MOD_JGTREEVIEW_VIEW_PARAMETER_LBL">
          <field name="cfg_icon_theme" type="list" default="" label="MOD_JGTREEVIEW_ICON_THEME_LBL" description="MOD_JGTREEVIEW_ICON_THEME_DESC">
            <option value="">MOD_JGTREEVIEW_ICON_THEME_0_LBL</option>
            <option value="blue_arrows">MOD_JGTREEVIEW_ICON_THEME_1_LBL</option>
            <option value="orange_arrows">MOD_JGTREEVIEW_ICON_THEME_2_LBL</option>
            <option value="red_flowers">MOD_JGTREEVIEW_ICON_THEME_3_LBL</option>
          </field>        
          <field class="btn-group" name="cfg_grid" type="radio" default="1" label="MOD_JGTREEVIEW_GRID_LBL" description="MOD_JGTREEVIEW_GRID_DESC">
            <option value="0">MOD_JGTREEVIEW_NO_LBL</option>
            <option value="1">MOD_JGTREEVIEW_YES_LBL</option>
          </field>
          <field name="cfg_bgcolor_active_node" type="color" float="none" default="#C0D2EC" label="MOD_JGTREEVIEW_BGCOLOR_ACTIVE_NODE_LBL" description="MOD_JGTREEVIEW_BGCOLOR_ACTIVE_NODE_DESC" />
          <field class="btn-group" name="cfg_disable_new" type="radio" default="0" label="MOD_JGTREEVIEW_DISABLE_NEW_LBL" description="MOD_JGTREEVIEW_DISABLE_NEW_DESC">
            <option value="0">MOD_JGTREEVIEW_NO_LBL</option>
            <option value="1">MOD_JGTREEVIEW_YES_LBL</option>
          </field>
      </fieldset> 
    </fields>
